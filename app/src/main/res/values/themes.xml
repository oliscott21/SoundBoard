<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoundBoard" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_var1</item>
        <item name="colorOnPrimary">@color/grey</item>
        <item name="android:navigationBarColor">@color/red</item>
        <item name="android:navigationBarDividerColor">@color/blue_var2</item>
    </style>

    <style name="btn_style">
        <item name="android:backgroundTint">@color/buttons</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">290dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/tomorrow</item>
        <item name="android:textSize">9pt</item>
    </style>

    <style name="toggle_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textSize">10pt</item>
        <item name="android:backgroundTint">@color/toggle_red</item>
        <item name="android:fontFamily">@font/tomorrow</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textSize">20pt</item>
        <item name="android:fontFamily">@font/tomorrow</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>